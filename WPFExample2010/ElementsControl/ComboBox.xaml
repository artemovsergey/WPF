<Window x:Class="ElementsControl.ComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComboBox" Height="300" Width="300">
    <Grid>

        
        <!--ComboBox-->
        
        
        <StackPanel Margin="10">

            <TextBlock Margin="1" Text="List" />
            
            <ComboBox Margin="1" Name="phonesList"
                  Height="30"
                  VerticalAlignment="Top"
                  IsEditable="False"
                  StaysOpenOnEdit="False"
                  Text="Список"
                  IsReadOnly="True"
                      
                  SelectionChanged="phonesList_SelectionChanged"
                  
                  
                  
                  >
                
                <TextBlock>LG Nexus 5X</TextBlock>
                <TextBlock>Huawai Nexus 6P</TextBlock>
                <TextBlock>iPhone 6S</TextBlock>
                <TextBlock>iPhone 6S Plus</TextBlock>
                <TextBlock>Microsoft Lumia 950</TextBlock>
            </ComboBox>
            
            



        </StackPanel>
     












    </Grid>
</Window>
