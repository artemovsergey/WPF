<Window x:Class="ElementsControl.Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image" Height="300" Width="300">
    <Grid>
        <StackPanel >

            <Image Source="1.gif" />

            <Image x:Name="mainImage">
                <Image.Source>
                    <FormatConvertedBitmap Source="1.gif" DestinationFormat="Gray32Float" />
                </Image.Source>
            </Image>

            <InkCanvas>
                <Image Source="1.gif" Width="300" Height="250" />
            </InkCanvas>


        </StackPanel>
        
        
    </Grid>
</Window>
