<Window x:Class="XAML.ConverterType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConverterType" Height="300" Width="300">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="myButton" Width="120" Height="40" Content="Кнопка">
                <Button.HorizontalAlignment>
                    <HorizontalAlignment>Center</HorizontalAlignment>
                </Button.HorizontalAlignment>

                <Button.Background>
                    <SolidColorBrush Opacity="0.5" Color="Red" />
                </Button.Background>
            </Button>

            
            <Button x:Name="myButton1" Width="120" Height="40" Content="Кнопка"
                    HorizontalAlignment="Center"
                    Background="Red"
                    />

        </StackPanel>
    </Grid>
</Window>
