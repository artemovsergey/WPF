<Window x:Class="Resources.ElementResource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ElementResource" Height="300" Width="300">

    <Window.Resources>
        
        <SolidColorBrush Color="LimeGreen" x:Key="buttonBrush" />

        <Button x:Key="buttonRes"
                x:Shared="False"
                Content="OK"
                MaxHeight="40"
                MaxWidth="80"
                Background="Azure" />

    </Window.Resources>

    <Grid>
        
        
        <Button x:Name="button1" MaxWidth="80" MaxHeight="40" Content="OK">
            <Button.Background>
                <DynamicResource ResourceKey="buttonBrush" />
            </Button.Background>
        </Button>
        
        <!-- 
        Элементы StaticResource и DynamicResource имеют свойство ResourceKey,
        которое позволяет установить ключ применяемого ресурса.
        -->

        <StackPanel>
            <StaticResource ResourceKey="buttonRes" />
            <StaticResource ResourceKey="buttonRes" />
            <StaticResource ResourceKey="buttonRes" />
            <StaticResource ResourceKey="buttonRes" />
        </StackPanel>



    </Grid>
</Window>
