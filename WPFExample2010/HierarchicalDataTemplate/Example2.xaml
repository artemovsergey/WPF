<Window x:Class="HierarchicalDataTemplate.Example2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Example2" Height="300" Width="300">

    <Window.Resources>
        <XmlDataProvider x:Key="nodesProvider"
                         Source="nodes.xml"
                         XPath="nodes/node" />
    </Window.Resources>

    <Grid>
        <TreeView ItemsSource="{Binding Source={StaticResource nodesProvider}}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding XPath=node}">
                    <TextBlock Text="{Binding XPath=@title}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
